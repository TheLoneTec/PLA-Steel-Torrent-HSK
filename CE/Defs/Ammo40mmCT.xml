	<ThingDef Class="CombatExtended.AmmoDef" Name="Ammo40mmCTBase" ParentName="SmallAmmoBase" Abstract="True">
		<description>Large caliber CT used by autocannons.</description>
		<statBases>
			<Mass>0.837</Mass>
			<Bulk>1.22</Bulk>
		</statBases>
		<tradeTags>
