	<!-- ================== Projectiles ================== -->

    <ThingDef Class="CombatExtended.AmmoDef" Name="Base40mmCTBullet" ParentName="BaseBullet" Abstract="true">
        <graphicData>
        <texPath>Things/Projectile/Bullet_Big</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
        <damageDef>Bullet</damageDef>
        <speed>250</speed>
        <dropsCasings>true</dropsCasings>
        </projectile>
        </ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base40mmCTBullet">
		<defName>Bullet_40mmCT_APFSDS</defName>
		<label>40mm CT shell (APFSDS)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>25</damageAmountBase>
			<secondaryDamage>
				<li>
				  <def>Bomb_Secondary</def>
				  <amount>34</amount>
				</li>
			  </secondaryDamage>
			<armorPenetrationSharp>138.4</armorPenetrationSharp>
			<armorPenetrationBlunt>2736.42</armorPenetrationBlunt>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<damageAmountBase>36</damageAmountBase>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveRadius>1.5</explosiveRadius>
				<explosionSound>MortarBomb_Explode</explosionSound>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			</li>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Large>38</Fragment_Large>
				</fragments>
			</li>
		</comps>
	</ThingDef>
