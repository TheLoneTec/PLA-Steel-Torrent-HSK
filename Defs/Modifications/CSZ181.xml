            <ThingDef>PLA_VehicleWeapon89HMG</ThingDef>
            <ThingDef>PLA_Gun04GLForVehicle</ThingDef>
            <ThingDef>PLA_CSZ181OffRoad</ThingDef>
        </descriptionHyperlinks>
        <jobString>Installing Type 89 HMG.</jobString>
        <recipeUsers>
            <li>PLA_CSZ181OffRoad</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>PLA_VehicleWeapon89HMG</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>PLA_VehicleWeapon89HMG</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>PLA_VehicleTurret</li>
        </appliedOnFixedBodyParts>
        <modExtensions>
            <li Class="PLA.Vehicle.RecipeModifyVehicleProps">
                <weaponToInstall>PLA_Gun89HMGForVehicle</weaponToInstall>
            </li>
        </modExtensions>
		<researchPrerequisite>
			<li>PLA_ResearchVehicle_VehicleModification</li>
		</researchPrerequisite>
    </RecipeDef>

