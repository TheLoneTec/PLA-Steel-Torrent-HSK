<Defs>

    <ThingDef ParentName="PLA_VehicleModWeaponBase">
        <defName>PLA_VehicleWeapon89HMG</defName>
        <label>vehicle modification kit - Type 89 HMG</label>
        <description>A modification toolkit that can be used to install the Type 89 HMG on vehicle.</description>
        <descriptionHyperlinks>
            <ThingDef>PLA_Gun04GLForVehicle</ThingDef>
            <RecipeDef>PLA_InstallWeapon89HMG</RecipeDef>
            <ThingDef>PLA_CSZ181OffRoad</ThingDef>
        </descriptionHyperlinks>
        <costList>
            <Steel>180</Steel>
            <ComponentIndustrial>12</ComponentIndustrial>
        </costList>
        <statBases>
            <Mass>41</Mass>
        </statBases>
		<researchPrerequisites>
			<li>PLA_ResearchVehicle_CSZ181OffRoad</li>
		</researchPrerequisites>
    </ThingDef>

    <RecipeDef ParentName="PLA_RecipeInstallVehicleWeapon">
