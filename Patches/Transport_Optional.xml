<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>PLA Steel Torrent</li>
	</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name = "PLA_BaseVehiclePawn"]/inspectorTabs</xpath>
				<value>
					<li>ITab_ContentsTransporter</li>
				</value>
			</li>

				<!-- ========== Lynx6x6 ultra light ========== -->

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "PLA_Lynx6x6UltraLight"]/comps</xpath>
				<value>
					<li Class="CompProperties_Transporter">
					<massCapacity>240</massCapacity>
					<max1PerGroup>true</max1PerGroup>
					<canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
					<showOverallStats>false</showOverallStats>
					<pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
					<pawnExitSound>Shuttle_PawnExit</pawnExitSound>
					</li>
				</value>
			</li>

				<!-- ========== CSZ-181 off-road ========== -->

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "PLA_CSZ181OffRoad"]/comps</xpath>
				<value>
					<li Class="CompProperties_Transporter">
					<massCapacity>160</massCapacity>
					<max1PerGroup>true</max1PerGroup>
					<canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
					<showOverallStats>false</showOverallStats>
					<pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
					<pawnExitSound>Shuttle_PawnExit</pawnExitSound>
					</li>
				</value>
			</li>
		
				<!-- ========== VP-22 truck ========== -->

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "PLA_VP22Truck"]/comps</xpath>
				<value>
					<li Class="CompProperties_Transporter">
					<massCapacity>240</massCapacity>
					<max1PerGroup>true</max1PerGroup>
					<canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
					<showOverallStats>false</showOverallStats>
					<pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
					<pawnExitSound>Shuttle_PawnExit</pawnExitSound>
					</li>
				</value>
			</li>
		
				<!-- ========== ZTL-11 infantry fighting vehicle ========== -->

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "PLA_ZTL11IFV"]/comps</xpath>
				<value>
					<li Class="CompProperties_Transporter">
					<massCapacity>240</massCapacity>
					<max1PerGroup>true</max1PerGroup>
					<canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
					<showOverallStats>false</showOverallStats>
					<pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
					<pawnExitSound>Shuttle_PawnExit</pawnExitSound>
					</li>
				</value>
			</li>
			
				<!-- ========== ZTZ-99A main battle tank ========== -->

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "PLA_ZTZ99ATank"]/comps</xpath>
				<value>
					<li Class="CompProperties_Transporter">
					<massCapacity>120</massCapacity>
					<max1PerGroup>true</max1PerGroup>
					<canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
					<showOverallStats>false</showOverallStats>
					<pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
					<pawnExitSound>Shuttle_PawnExit</pawnExitSound>
					</li>
				</value>
			</li>
			
			<li Class="PatchOperationFindMod">
				<mods>
					<li>[TMC] Steel Torrent addon - T34 tank</li>
				</mods>
				<match Class="PatchOperationSequence">
					<operations>
					
						<!-- ========== T-34 Tank ========== -->

					<li Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName = "TMC_T34Tank"]/comps</xpath>
						<value>
							<li Class="CompProperties_Transporter">
							<massCapacity>120</massCapacity>
							<max1PerGroup>true</max1PerGroup>
							<canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
							<showOverallStats>false</showOverallStats>
							<pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
							<pawnExitSound>Shuttle_PawnExit</pawnExitSound>
							</li>
						</value>
					</li>
					
					</operations>
				</match>
			</li>
			

	
			</operations>
		</match>
    </Operation>
	
</Patch>